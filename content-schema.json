{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/LegendaryMediaTV/EGP-Graphai/content-schema.json",
  "oneOf": [
    { "type": "string", "minLength": 1 },
    {
      "type": "object",
      "properties": {
        "text": { "type": "string", "minLength": 1 }
      },
      "required": ["text"],
      "additionalProperties": false
    },
    {
      "type": "array",
      "items": { "$ref": "#" },
      "minItems": 1
    }
  ]
}
